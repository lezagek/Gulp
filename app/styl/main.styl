padding = 10px
indentValue = 2vw
color = #DCDCDC

body
	display flex
	background #164B69
	font-size 14px
	align-items center
	justify-content center
	color black
	text-align center
	flex-direction column
	padding indentValue
	font-size 14px
	font-family arial

	.centralBlock
		width 50%
		min-height 700px
		min-width 100px
		padding indentValue
		margin @padding
		background-color #E3E3E3
		display flex
		flex-direction column

		.menuFlex
			padding padding/2
			display flex
			flex-direction row
			justify-content space-around
			span
				background-color grey
				padding 5px;
			.menuItem
				a
					text-decoration none
					font-weight: bold
					color black
				a:hover
					background-color grey
					padding 5px;


@import textBlock
@import videoBlock
@import rowOfImages
@import textFlex
@import mainMedia